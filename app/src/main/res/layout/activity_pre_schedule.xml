<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.colin.demo.PreScheduleActivity">

    <LinearLayout
        android:id="@+id/sch_ava_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/main_pre_button_text">

        <ListView
            android:id="@+id/schedule_ava_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sch_sem_line_1_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/sch_sem_top_left_layout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/first_semester"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColorHighlight="@color/blue"
                />
            <ListView
                android:id="@+id/sch_sem_top_left_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="true">

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sch_sem_top_right_layout"
            android:background="@color/top_right"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/second_semester"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColorHighlight="@color/blue"
                />
            <ListView
                android:id="@+id/sch_sem_top_right_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="true"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/sch_sem_line_2_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sch_sem_bot_left_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/third_semester"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColorHighlight="@color/blue"
                />
            <ListView
                android:id="@+id/sch_sem_bot_left_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sch_sem_bot_right_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/fourth_semester"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColorHighlight="@color/blue"
                />
            <ListView
                android:id="@+id/sch_sem_bot_right_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
